<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityBottomTextStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="BottomStyle">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="SettingBottomStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity"></item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:padding">12dp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey</item>
    </style>
    <style name="SettingSwitchTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ActivityBackgroundStyle">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="SettingBackgroundStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="SettingTextVievStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="searchTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawableStart">@drawable/search_image</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>
    <style name="searchClearIcon">
        <item name="android:src">@drawable/ic_menu_close_clear_cancel</item>
    </style>
    <style name="greyAndWhiteText">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="blackAndWhiteText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="iconTintGreyWhite">
        <item name="iconTint">@color/grey</item>
    </style>
    <style name="backGroundGreyWhite">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="bottomBlackAndWhite" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NameFieldTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_player</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerTrackTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PlayerFieldTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerArtistTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextStyleMediateca">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="TextTabLayoutStyle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabTextColor">@color/background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextMediaStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MediaButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="AllBackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>

</resources>