<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingLeft="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        app:icon="@drawable/arrow_forward_track"
        app:iconGravity="end"
        style="@style/iconTintGreyWhite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPlaceHolderImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tvTrackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SettingTextVievStyle"
                android:textSize="16sp"
                tools:text="Smells Like Teen Spirit"
                android:ellipsize="end"
                android:maxLines ="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvArtistName"
                    style="@style/greyAndWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="Nirvana"
                    android:ellipsize="end"
                    android:maxLines ="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ellipse_1"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvTimeTrack"
                    style="@style/greyAndWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="5:01"
                    android:ellipsize="end"
                    android:maxLines ="1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>