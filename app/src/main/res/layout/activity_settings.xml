<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".setting.ui.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Button
            android:id="@+id/backSettingsBtm"
            style="@style/SettingBackgroundStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            app:icon="@drawable/arrow_back" />

        <TextView
            style="@style/SettingTextVievStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="10dp"
            android:text="@string/app_settings"
            android:textAllCaps="false"
            android:textFontWeight="500"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSw"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginHorizontal="12dp"
            android:text="@string/app_dark_style"
            android:textSize="16sp"
            app:thumbTint="@color/light_gray"
            app:trackTint="@color/grey" />

        <Button
            android:id="@+id/shareBtm"
            style="@style/SettingBottomStyle"
            android:text="@string/app_share"
            app:icon="@drawable/share" />

        <Button
            android:id="@+id/supportBtm"
            style="@style/SettingBottomStyle"
            android:text="@string/app_mail_support"
            app:icon="@drawable/support" />

        <Button
            android:id="@+id/licenceBtm"
            style="@style/SettingBottomStyle"
            android:text="@string/user_licence"
            app:icon="@drawable/arrow_forward" />

    </LinearLayout>

</LinearLayout>